<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Zen+Kurenaido:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #DFD0B8;
            font-family: 'Zen Kurenaido', sans-serif;
            font-size: 16px; /* Base font size */
        }

        .nav-link {
            color: #153448 !important;
            font-size: 18px; /* Increase font size for nav links */
            margin-right: 15px; /* Increase space between nav items */
        }

        .navbar-brand img {
            max-height: 82px; /* Adjust size as needed */
        }

        .navbar {
            border-bottom: 1px solid rgba(21, 52, 72, 0.2); /* Lighter shade of #153448 */
        }

        .navbar-nav {
            flex-direction: row;
        }

            .navbar-nav .nav-item {
                margin-right: 15px; /* Increase space between nav items */
            }

                .navbar-nav .nav-item:last-child {
                    margin-right: 0; /* Remove right margin for the last item */
                }

            .navbar-nav .ml-auto {
                margin-left: auto; /* Pushes the last item to the right */
            }

        footer {
            background-color: #DFD0B8;
            padding: 20px 0;
            border-top: 1px solid rgba(21, 52, 72, 0.2); /* Lighter shade of #153448 */
        }

            footer .container {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }

            footer .navbar-brand img {
                max-height: 62px; /* Adjust size as needed */
            }

            footer .navbar-nav {
                flex-direction: row;
                margin-top: 10px;
            }

            footer .nav-item {
                margin-right: 15px;
            }

                footer .nav-item:last-child {
                    margin-right: 0;
                }

            footer .nav-link {
                color: #153448 !important;
            }

        .contact-info {
            margin-top: 20px;
            text-align: center;
        }

            .contact-info p {
                margin: 0;
            }

            .contact-info span {
                display: inline-block;
                margin: 0 10px;
            }

                .contact-info span:not(:last-child)::after {
                    content: " | ";
                    margin-left: 10px;
                    color: #153448; /* Color of the separator */
                }

            .contact-info a {
                color: #153448;
                text-decoration: none;
            }

                .contact-info a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #DFD0B8">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/AgateLogo.png" alt="Application Logo" />
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Shop", "AllProducts", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Categories", "Categories", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    

                        @if (Session["registeredUsers"] != null)
                        {
                            <!-- Container for right-aligned nav items -->
                        <li class="nav-item col-sm-5">
                            @Html.ActionLink("Profile", "ProfilePage", "Login", new { id = Session["UserID"] }, new { @class = "nav-link " })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Orders", "MyOrders", "Shop", new { id = Session["UserID"] }, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Cart", "Shop", new { id = Session["UserID"] })" class="btn-cart cart-icon">
                                <i style="font-size:36px; color:#153448" class="fa fa-shopping-bag"></i>
                            </a>
                        </li>
                        <li class="nav-item ml-auto">
                            @using (Html.BeginForm("Logout", "Login", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link nav-link">
                                    <i class="fa fa-sign-out" style="font-size: 24px; color: #153448;"></i>
                                </button>
                            }
                        </li>

                    }
                    else
                    {
                        <li class="nav-item ml-auto">
                            @Html.ActionLink("Login", "Login", "Login", new { area = "" }, new { @class = "nav-link" })
                        </li>
                    }
                
                </ul>
            </div>
        </div>
    </nav>


    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    <hr />
    <footer>
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/AgateLogo.png" alt="Application Logo" />
            </a>
            <ul class="navbar-nav">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Categories", "Categories", "Shop", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>
            <div class="contact-info">
                <p>
                    <span><a href="mailto:info@example.com">info@example.com</a></span>
                    <span><a href="tel:+1234567890">+1 (234) 567-890</a></span>
                    <span><a href="https://www.example.com/contact">Contact Form</a></span>
                </p>
            </div>
            <p>&copy; @DateTime.Now.Year - Agate Coffee Shop</p>
        </div>
    </footer>


    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
</body>
</html>
