@model Project6.Models.PasswordResetViewModel

@{
    ViewBag.Title = "Edit Password";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="d-flex justify-content-center">
        <div class="form-horizontal" style="width: 100%; max-width: 500px;">
            <h2 class="text-center">Password Reset</h2>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserID)

            <div class="form-group">
                @Html.LabelFor(model => model.OldPassword, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NewPassword, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmNewPassword, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(model => model.ConfirmNewPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="text-center mt-4">
    @Html.ActionLink("Back to Profile", "ProfilePage", new { id = Model.UserID }, new { @class = "btn btn-secondary" })
</div>

<style>
    body {
        background-color: #DFD0B8;
        font-family: 'Zen Kurenaido', sans-serif;
        font-size: 16px;
    }

    h2 {
        color: #153448;
        font-weight: 600;
    }

    .form-horizontal {
        background-color: #FFFFFF;
        border: 1px solid #3C5B6F;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    .control-label {
        color: #153448;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .form-control {
        border: 1px solid #3C5B6F;
        border-radius: 6px;
        padding: 12px;
        font-size: 14px;
    }

    .btn-primary {
        background-color: #3C5B6F;
        color: #FFFFFF;
        border: none;
        border-radius: 6px;
        padding: 12px 24px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #153448;
        }

    .btn-secondary {
        background-color: #DFD0B8;
        color: #153448;
        border: 1px solid #153448;
        border-radius: 6px;
        padding: 12px 24px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-weight: 600;
    }

        .btn-secondary:hover {
            background-color: #3C5B6F;
            color: #FFFFFF;
            border-color: #3C5B6F;
        }

    .text-danger {
        color: #D9534F;
        font-weight: 600;
        margin-top: 5px;
    }

    hr {
        border: 1px solid #DFD0B8;
        margin-bottom: 30px;
    }

    .mt-4 {
        margin-top: 1.5rem !important;
    }

    .d-flex {
        display: flex;
    }

    .justify-content-center {
        justify-content: center;
    }
</style>
